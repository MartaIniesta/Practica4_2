package Ejercicio14;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Ejercicio14 {
	public static void main(String[] args) {
		System.out.println("Inicio del programa\n");
		
		fechaValida("31/12/2023");
		
		System.out.println("\nFin del programa");	
	}
	
	public static boolean fechaValida(String fecha) {

		Pattern patron = Pattern.compile("([0-9]{2}(/|-|.)[0-9]{2}(/|-|.)[0-9]{4})|([0-9]{4}(/|-|.)[0-9]{2}(/|-|.)[0-9]{2})");
		Matcher coincidencias = patron.matcher(fecha);
	    if (coincidencias.find()) {
	        System.out.println("Encontrada la fecha!! --> " + coincidencias.group(0) + "\n");
	        return true;
	    }
	    return false;
	}
}