package Ejemplos;

import java.util.regex.*;

public class Ejemplo31 {
	public static void main(String[] args) {
		// Elimina los espacios en blanco entre una letra seguida de un punto o una coma 
		String texto = "hola@EJEMPLO_TEST.com";
		String textoCorregido = corregir(texto);
		System.out.println("Texto original\n" + texto);
		System.out.println("\nTexto corregido\n" + textoCorregido);
	}
	
	public static String corregir(String texto) {
		String regex = "(?i)(@)(.+?)(.)";
		texto = texto.replaceAll(regex, "$2");
		return texto;
	}
}